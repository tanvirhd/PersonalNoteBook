<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/editText_new_category_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Category Name"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/btnCreateNewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_new_category_text"
        android:layout_alignStart="@+id/editText_new_category_text"
        android:layout_marginTop="44dp"
        android:background="@drawable/background_category"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Create"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editText_new_category_text"
        app:layout_constraintStart_toStartOf="@+id/editText_new_category_text"
        app:layout_constraintTop_toBottomOf="@+id/editText_new_category_text" />

</androidx.constraintlayout.widget.ConstraintLayout>